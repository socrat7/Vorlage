<mvc:View controllerName="crud01.controller.App" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" displayBlock="true">
	<Shell>
		<App>
			<pages>
				<Page title="Título de página">
					<content>
						<Panel headerText="Título del panel" class="sapUiResponsiveMargin" width="auto">
							<content>
								<Button text="Say Hello" press=".onShowHello" type="Accept" />
								<Input value="{/recipient/name}" description="Hello {/recipient/name}" valueLiveUpdate="true" width="60%" />
							</content>
						</Panel>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>

</mvc:View>